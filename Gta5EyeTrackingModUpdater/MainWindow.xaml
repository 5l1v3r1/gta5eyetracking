<Window x:Class="Gta5EyeTrackingModUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gta5EyeTrackingModUpdater"
        mc:Ignorable="d"
        Title="GTA V Eye Tracking Mod Updater" Height="350" Width="525" ResizeMode="NoResize" Icon="Resources/ApplicationIcon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320*"/>
            <ColumnDefinition Width="199*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label Content="Component versions"></Label>
            <Button Content="Check for update"></Button>
            <Button Content="Install the mod"></Button>
            <Button Content="Remove the mod"></Button>
			<CheckBox Content="Autostart on Windows startup"></CheckBox>
        </StackPanel>
    </Grid>
</Window>
